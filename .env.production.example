# JobSync Production Environment
# Copy to .env.production and fill in values

# Authentication (REQUIRED)
# Generate with: openssl rand -base64 32
AUTH_SECRET=

# User credentials for login
USER_EMAIL=your@email.com
USER_PASSWORD=your-secure-password

# URLs (REQUIRED)
NEXTAUTH_URL=https://jobs.abaj.ai
AUTH_TRUST_HOST=true

# Database
DATABASE_URL=file:/data/dev.db

# Email Sync API (REQUIRED for remote sync)
# Generate with: openssl rand -base64 32
EMAIL_SYNC_API_KEY=
MONITORED_EMAILS=j@abaj.ai,aayushbajaj7@gmail.com

# Ollama - NOT NEEDED on production server
# Email classification happens on local machine
# OLLAMA_BASE_URL=

# OpenAI - Optional, for AI features that require it
# OPENAI_API_KEY=
